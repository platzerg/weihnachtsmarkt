<?xml version="1.0" encoding="utf-8"?><LinearLayout android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_gravity="center"    android:background="@drawable/bayerflagge_480x800_ohne_alles"    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginTop="15dip"
        android:orientation="horizontal" >
        <TextView            android:id="@+id/txt_biergarten_speisen_title"            android:layout_width="fill_parent"            android:layout_height="fill_parent"            android:layout_gravity="center_horizontal"            android:gravity="center_horizontal"            android:text="@string/txt_biergarten_speisen_title"            android:textAppearance="?android:attr/textAppearanceLarge"            android:textColor="@color/color_black"            android:textSize="30dip"            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginBottom="5dip"        android:layout_marginLeft="5dip"        android:layout_marginRight="5dip" >
        <TextView            android:id="@+id/txt_biergarten_details_riesenbrenze"            style="@style/Widget.TextView.TextViewStyle.Biergarten"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginRight="5dip"            android:minWidth="95dip"            android:text="@string/txt_biergarten_details_riesenbrenze"            android:textAppearance="@style/TextAppearance.Widget.TextViewStyle.Biergarten" />
        <EditText            android:id="@+id/edt_biergarten_details_riesenbrenze"            style="@style/Widget.EditText.EditTextStyle.Biergarten"            android:layout_width="0dip"            android:layout_height="wrap_content"            android:layout_weight="1"            android:inputType="text"            android:textAppearance="@style/TextAppearance.Widget.EditTextStyle.Biergarten" />
    </LinearLayout>
    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginBottom="5dip"        android:layout_marginLeft="5dip"        android:layout_marginRight="5dip" >
        <TextView            android:id="@+id/txt_biergarten_details_obazda"            style="@style/Widget.TextView.TextViewStyle.Biergarten"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginRight="5dip"            android:minWidth="95dip"            android:text="@string/txt_biergarten_details_obazda"            android:textAppearance="@style/TextAppearance.Widget.TextViewStyle.Biergarten" />
        <EditText            android:id="@+id/edt_biergarten_details_obazda"            style="@style/Widget.EditText.EditTextStyle.Biergarten"            android:layout_width="0dip"            android:layout_height="wrap_content"            android:layout_weight="1"            android:inputType="text"            android:textAppearance="@style/TextAppearance.Widget.EditTextStyle.Biergarten" />
    </LinearLayout>
    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginBottom="5dip"        android:layout_marginLeft="5dip"        android:layout_marginRight="5dip"        android:orientation="vertical" >        <TextView            android:id="@+id/txt_biergarten_details_lieblingsgericht"            style="@style/Widget.TextView.TextViewStyle.Biergarten"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginRight="5dip"            android:text="@string/txt_biergarten_details_lieblingsgericht"            android:textAppearance="@style/TextAppearance.Widget.TextViewStyle.Biergarten" />        <EditText            android:id="@+id/edt_biergarten_details_lieblingsgericht"            style="@style/Widget.EditText.EditTextStyle.Biergarten"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:ems="10"            android:gravity="top"            android:inputType="textMultiLine"            android:lines="3"            android:textAppearance="@style/TextAppearance.Widget.EditTextStyle.Biergarten" />
    </LinearLayout>
    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginBottom="5dip"        android:layout_marginLeft="5dip"        android:layout_marginRight="5dip"        android:orientation="vertical" >
        <TextView            android:id="@+id/txt_biergarten_details_speisenkommentar"            style="@style/Widget.TextView.TextViewStyle.Biergarten"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginRight="5dip"            android:text="@string/txt_biergarten_details_speisenkommentar"            android:textAppearance="@style/TextAppearance.Widget.TextViewStyle.Biergarten" />        <EditText            android:id="@+id/edt_biergarten_details_speisenkommentar"            style="@style/Widget.EditText.EditTextStyle.Biergarten"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:ems="10"            android:gravity="top"            android:inputType="textMultiLine"            android:lines="9"            android:textAppearance="@style/TextAppearance.Widget.EditTextStyle.Biergarten" />
    </LinearLayout>

</LinearLayout>