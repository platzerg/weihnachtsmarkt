<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/hintergrund_3_400x800"
    android:orientation="vertical" >


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dip"
        android:layout_marginTop="15dip"
        android:orientation="horizontal" >



        <TextView
            android:id="@+id/txt_biergarten_details_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Biergarten"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/color_eingabe_text"
            android:textSize="30dip"
            android:textStyle="bold" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip" >
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip" >



        <TextView
            android:id="@+id/txt_biergarten_details_strasse"
            style="@style/Widget.TextView.TextViewStyle.Biergarten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:text="@string/txt_biergarten_details_strasse"
            android:textAppearance="@style/TextAppearance.Widget.TextViewStyle.Biergarten" />


        <EditText
            android:id="@+id/edt_biergarten_details_strasse"
            style="@style/Widget.EditText.EditTextStyle.Biergarten"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:textAppearance="@style/TextAppearance.Widget.EditTextStyle.Biergarten" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip" >



        <TextView
            android:id="@+id/txt_biergarten_details_plz"
            style="@style/Widget.TextView.TextViewStyle.Biergarten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:text="@string/txt_biergarten_details_plz"
            android:textAppearance="@style/TextAppearance.Widget.TextViewStyle.Biergarten" />

        <EditText
            android:id="@+id/edt_biergarten_details_plz"
            style="@style/Widget.EditText.EditTextStyle.Biergarten"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:textAppearance="@style/TextAppearance.Widget.EditTextStyle.Biergarten" />



    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip" >



        <TextView
            android:id="@+id/txt_biergarten_details_ort"
            style="@style/Widget.TextView.TextViewStyle.Biergarten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:text="@string/txt_biergarten_details_ort"
            android:textAppearance="@style/TextAppearance.Widget.TextViewStyle.Biergarten" />

        <EditText
            android:id="@+id/edt_biergarten_details_ort"
            style="@style/Widget.EditText.EditTextStyle.Biergarten"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:textAppearance="@style/TextAppearance.Widget.EditTextStyle.Biergarten" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip" >



        <TextView
            android:id="@+id/txt_biergarten_details_telefon"
            style="@style/Widget.TextView.TextViewStyle.Biergarten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:text="@string/txt_biergarten_details_telefon"
            android:textAppearance="@style/TextAppearance.Widget.TextViewStyle.Biergarten" />


        <EditText
            android:id="@+id/edt_biergarten_details_telefon"
            style="@style/Widget.EditText.EditTextStyle.Biergarten"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textPhonetic"
            android:textAppearance="@style/TextAppearance.Widget.EditTextStyle.Biergarten" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip" >




        <TextView
            android:id="@+id/txt_biergarten_details_email"
            style="@style/Widget.TextView.TextViewStyle.Biergarten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:text="@string/txt_biergarten_details_email"
            android:textAppearance="@style/TextAppearance.Widget.TextViewStyle.Biergarten" />



        <EditText
            android:id="@+id/edt_biergarten_details_email"
            style="@style/Widget.EditText.EditTextStyle.Biergarten"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textEmailAddress"
            android:textAppearance="@style/TextAppearance.Widget.EditTextStyle.Biergarten" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip" >



        <TextView
            android:id="@+id/txt_biergarten_details_url"
            style="@style/Widget.TextView.TextViewStyle.Biergarten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:text="@string/txt_biergarten_details_url"
            android:textAppearance="@style/TextAppearance.Widget.TextViewStyle.Biergarten" />


        <EditText
            android:id="@+id/edt_biergarten_details_url"
            style="@style/Widget.EditText.EditTextStyle.Biergarten"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textUri"
            android:textAppearance="@style/TextAppearance.Widget.EditTextStyle.Biergarten" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip" >






        <TextView
            android:id="@+id/txt_biergarten_details_desc"
            style="@style/Widget.TextView.TextViewStyle.Biergarten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:gravity="top"
            android:text="@string/txt_biergarten_details_desc"
            android:textAppearance="@style/TextAppearance.Widget.TextViewStyle.Biergarten" />


        <EditText
            android:id="@+id/edt_biergarten_details_desc"
            style="@style/Widget.EditText.EditTextStyle.Biergarten"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:lines="4"
            android:textAppearance="@style/TextAppearance.Widget.EditTextStyle.Biergarten" >



            <requestFocus />
        </EditText>

    </LinearLayout>

    <FrameLayout
            android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:layout_weight="1">
        </FrameLayout>
    
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="10dip" >




        <ImageButton
            android:id="@+id/img_button_biergarten_details_getraenke"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_weight="1.0"
            android:background="@color/color_transparent"
            android:src="@drawable/getraenke_button" />


        <ImageButton
            android:id="@+id/img_button_biergarten_details_speisen"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@color/color_transparent"
            android:src="@drawable/speisen_button" />








    </LinearLayout>

</LinearLayout>